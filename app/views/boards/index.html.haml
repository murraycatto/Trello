= render '/layouts/header'
%table
  %thead
    %tr
      %th Name
      %th User
      %th Color
      %th Project
      %th
      %th
      %th

  %tbody
    - @boards.each do |board|
      %tr
        %td= board.name
        %td= board.user_id
        %td= board.color_id
        %td= board.project_id
        %td= link_to 'Show', board
        %td= link_to 'Edit', edit_board_path(board)
        %td= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Board', new_board_path
